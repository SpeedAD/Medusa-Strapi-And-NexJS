{
  "kind": "collectionType",
  "collectionName": "authors",
  "info": {
    "singularName": "author",
    "pluralName": "authors",
    "displayName": "Author",
    "description": ""
  },
  "options": {
    "draftAndPublish": true
  },
  "pluginOptions": {},
  "attributes": {
    "author_image": {
      "type": "media",
      "multiple": false,
      "required": false,
      "allowedTypes": [
        "images",
        "files",
        "videos"
      ]
    },
    "author_name": {
      "type": "string"
    },
    "author_designation": {
      "type": "text"
    },
    "linkedin": {
      "type": "component",
      "repeatable": false,
      "component": "atoms.social-link"
    },
    "slug": {
      "type": "uid",
      "targetField": "author_name"
    },
    "articles": {
      "type": "relation",
      "relation": "manyToMany",
      "target": "api::article.article",
      "mappedBy": "authors"
    }
  }
}
